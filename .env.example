# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fft_solar_crm
DB_USER=postgres
DB_PASSWORD=your_password

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=6200
NODE_ENV=development

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=FFT Solar CRM <noreply@fftsolar.com>

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Google Drive Configuration (v2.1)
GOOGLE_DRIVE_ENABLED=true
# Root文件夹ID（在Drive中创建"FFT Solar Projects"并获取ID）
GOOGLE_DRIVE_ROOT_FOLDER_ID=your_root_folder_id_here
# Service Account邮箱
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project-id.iam.gserviceaccount.com
# 凭证文件路径（Docker容器内路径，不要把JSON内容放这里！）
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/app/config/google-drive-credentials.json
# Webhook安全令牌（用于验证Google通知）
GOOGLE_DRIVE_WEBHOOK_TOKEN=random_secure_token_here
# 同步间隔（秒，作为webhook失败时的备选方案）
GOOGLE_DRIVE_SYNC_INTERVAL=300
