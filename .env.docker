# Docker Environment Variables for FFT Solar CRM

# Database Configuration
DB_HOST=database
DB_PORT=5432
DB_NAME=fft_solar_crm
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Secret
JWT_SECRET=fft_solar_crm_secret_key_2025_docker
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3200
NODE_ENV=production

# Email Configuration (Optional - Configure later)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=FFT Solar CRM <noreply@fftsolar.com>

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# PostgreSQL Database (for docker-compose)
POSTGRES_DB=fft_solar_crm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
